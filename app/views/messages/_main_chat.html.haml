.main_chat
  .chat_group_info
    .chat_group_info__left-box
      .chat_group_info__left-box__group
        = @group.name
      .chat_group_info__left-box__menber
        Menber:
        - @group.users.each do |user|
          = user.name
    .chat_group_info__edit
      = link_to edit_group_path(@group) do
        Edit

  .chat-main__content
    = render @messages







  .chat-main__form
    = form_for [@group, @message] do |f|
      .box
        = f.text_field :content, class: 'box__text', placeholder: 'type a message'
        = f.label :image, class: 'box__icon' do
          = icon('fas', 'image')
          = f.file_field :image, class: 'box__icon__hidden'
      = f.submit 'Send', class: 'send'