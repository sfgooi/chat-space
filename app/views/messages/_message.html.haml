

.chat-main__content__coment
  .chat-main__content__coment__user-data
    .chat-main__content__coment__user-data__name
      = message.user.name
      .chat-main__content__coment__user-data__name__time
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .chat-main__content__coment__user-data__new
      - if message.content.present?
        = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?